{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "MD013": {
    "line_length": 80,
    "code_blocks": false,
    "tables": false,
    "headings": false
  },
  "MD033": {
    "allowed_elements": [
      "details",
      "summary",
      "br",
      "kbd",
      "sub",
      "sup",
      "antml:function_calls",
      "antml:invoke",
      "antml:parameter"
    ]
  },
  "MD041": false,
  "MD046": {
    "style": "fenced"
  },
  "MD024": {
    "siblings_only": true
  },
  "MD025": {
    "front_matter_title": ""
  },
  "MD003": {
    "style": "atx"
  },
  "MD004": {
    "style": "dash"
  },
  "MD007": {
    "indent": 2
  },
  "MD029": {
    "style": "ordered"
  },
  "MD035": {
    "style": "---"
  }
}
